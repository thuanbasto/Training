
public class SumMoney {
	public static int sumMoney(long n)
	{
		long temp = ((long)(n%1000000007)*((n+1)%1000000007)*((n+2)%1000000007)/6)%1000000007;
		System.out.println(temp);
		return (int)temp ;
	}

	public static void main(String[] args) {
		System.out.println(sumMoney(100000000000000000L));
	}

}
